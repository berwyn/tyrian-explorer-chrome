{
	"name": "GW2 Companion",
	"version": "1.0",
	"manifest_version": 2,
	"minimum_chrome_version": "23",
	"permissions": [
		"app.window",
		"webview",
		"https://api.guildwars2.com/*",
		"https://tiles.guildwars2.com/*",
		"https://maps.googleapis.com/maps/*"
	],
	"icons": {
		"128": "gw2_icon_128.png"
	},
	"app": {
		"background": {
			"scripts": [
				"background.js"
			]
		}
	},
	"sandbox": {
		"pages": ["partials/map_host.html"]
	}
}